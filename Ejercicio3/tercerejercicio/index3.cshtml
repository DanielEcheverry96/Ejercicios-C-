<html xmlns="http://www.w3.org/1999/xhtml">
<!--//3. Leer una temperatura en grados Fahrenheit y pasarla a Celsius.-->
<head>
    <title>Ejercicio 3</title>
</head>
@{
    var totalGradosC = "";
    if (IsPost)
    {
        var gfahrentheit = Request["fahren"];
        var gfah = gfahrentheit.AsFloat();
        var celsius = ((gfah-32)*5)/9;

        totalGradosC = celsius + " " + "grados celsius";

    }
}
<body style="background-color: beige; font-family: Verdana, Arial;">
    <form action="" method="post">
        <p>
            <label for="fahren">Grados fahrenheit:</label><br>
            <input type="text" name="fahren" />
        </p>
        <p><input type="submit" value=" Convertir " /></p>
    </form>
    <p>@totalGradosC</p>
</body>
</html>